@using YangiBozor.Domain.Entities

@model User

@{
    ViewBag.Title = "Login";
}

<div class="d-flex justify-content-center">
    <div class="card border-secondary mt-5" style="max-width: 25rem;">
        <div class="card-header bg-secondary text-white">Login</div>
        <div class="card-body">
            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(a => a.UserName)
                    @Html.TextBoxFor(a => a.UserName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(a => a.Password)
                    @Html.PasswordFor(a => a.Password, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            }
        </div>
    </div>
</div>
